<h1 class="usernameH1">{{currentUser.username}} Profile Details</h1>
<form action="/users-edit/{{currentUser._id}}" method="POST" id="editForm" enctype="multipart/form-data">
    <div class="user-details-form">
        <div class="row">
            <div class="row">
                <div class="details col-sm-12">
                    <p><br>
                        <label>First Name</label>
                        <input type="text" name="firstName" value="{{currentUser.firstName}}"><br>
                        <label>Last Name</label>
                        <input type="text" name="lastName" value="{{currentUser.lastName}}"><br>
                        <label>Age</label>
                        <input type="number" name="age" value="{{currentUser.age}}"><br>
                        <label>Username: </label>
                        <span> {{currentUser.username}}</span><br>
                        <label>E-mail: </label><span> {{currentUser.email}}</span><br>
                        <label>Avatar</label>
                        <input type="file" name="photo"><br><br>
                    </p>
                    <div>
                        <button type="submit">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>