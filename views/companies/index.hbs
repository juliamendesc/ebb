<div class="cards-list">
  {{#each allCompanies}}
    <div class="card">
      <div class="card_image">
        <img src="{{ this.image }}"/>
      </div>
      <div class="card_title">
        <a href='/companies/{{ this._id }}' class='btn primary btn-sm'>
          <p>
            See company details 
          </p> 
        </a>
      </div>
    </div>
  {{/each}}
</div>


