<head>
  <link rel="stylesheet" href="/stylesheets/cards.css">
</head>
<div class="jumbotron fluid">
  <div class="container">
    <h1 class="mb-0 display-2 hero-title">We crowdsourced company policies to help create a more diverse workforce</h1>
    <br>
    <h3 class="sub-title">Know a company that should be featured?</h3>
    <br>
    <a class="btn primary btn-lg" href="/companies/new">Submit a Company</a>
  </div>
</div>
<div class="cards-list">
  {{#each allCompanies}}
    <div class="card">
      <div class="card_image">
        <img src="{{ this.image }}"/>
      </div>
      <div class="card_title">
        <a href='/companies/{{ this._id }}' class='btn primary btn-sm' <p> See company details </p> </a>
      </div>
    </div>
  {{/each}}
</div>

