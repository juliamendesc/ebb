<div class="row">
   <h1 class="comment-new" style="text-align: center;">Add new comment to {{company.name}}</h1>
   <div style="width: 50%; margin: 30px auto;">
      <form action="/companies/{{company.id}}/comments" method="POST">
         <div class="form-group">
            <input class="form-control" type="text" name="text" placeholder="text">
         </div>       
         <div class="form-group">
            <button class="btn btn-sm btn-primary btn-block">Submit!</button>
         </div>
      </form>
      <a href="/companies">Go back</a>
   </div>
</div>